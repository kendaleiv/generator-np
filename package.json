{
  "name": "generator-np",
  "version": "2.22.0",
  "description": "Generator for npm module with ES6+, Babel, Ava, ESlint, Travis and npm scripts",
  "files": [
    "common",
    "templates",
    "generators/app",
    "generators/eslint"
  ],
  "keywords": [
    "ava",
    "babel",
    "boilerplate",
    "bootstrap",
    "cli",
    "commitizen",
    "coveralls",
    "es2015",
    "es6",
    "eslint",
    "generator",
    "javascript",
    "kit",
    "module",
    "node_module",
    "node-module",
    "node",
    "npm scripts",
    "npm",
    "plugin",
    "productivity",
    "scaffold",
    "starter",
    "template",
    "transpile",
    "travis",
    "yeoman-generator",
    "yeoman"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d4rkr00t/generator-np"
  },
  "scripts": {
    "audit": "nsp check package",
    "build": "babel -d ./ ./src",
    "build:watch": "chokidar 'src/**' -c 'npm run build' --silent --initial",
    "check": "npm run audit && npm outdated --depth 0",
    "coverage": "nyc --reporter=lcov --reporter=text --reporter=html npm test",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "eslint src test",
    "prepare": "npm run build && npm run validate && npm run check",
    "pp": "npm run prepare",
    "test": "ava --serial",
    "test:watch": "chokidar 'test/app.js' 'src/**' -c 'npm test' --silent --initial",
    "validate": "npm run lint && npm test",
    "github-release": "conventional-github-releaser -p angular",
    "major": "pmm major",
    "minor": "pmm minor",
    "patch": "pmm patch"
  },
  "author": {
    "name": "Stanislav Sysoev",
    "email": "d4rkr00t@gmail.com",
    "url": "http://github.com/d4rkr00t"
  },
  "pre-commit": [
    "validate"
  ],
  "devDependencies": {
    "ava": "^0.11.0",
    "babel": "^5.8.34",
    "babel-eslint": "^4.1.5",
    "chokidar-cli": "^1.2.0",
    "conventional-github-releaser": "^0.5.1",
    "coveralls": "^2.11.6",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^1.10.3",
    "nsp": "^2.2.0",
    "nyc": "^5.5.0",
    "pmm": "^1.3.0",
    "pre-commit": "^1.1.2",
    "yeoman-assert": "^2.1.1",
    "yeoman-test": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "normalize-url": "^1.4.0",
    "underscore.string": "^3.2.3",
    "yeoman-generator": "^0.22.4",
    "yosay": "^1.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
